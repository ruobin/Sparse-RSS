<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Eric" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Eric_Solid_ActionBar</item>
        <item name="spinnerItemStyle">@style/Eric_SpinnerItem</item>
        <item name="spinnerDropDownItemStyle">@style/Eric_Spinner_DropDownItem</item>
        <item name="actionDropDownStyle">@style/Eric_DropDownNav</item>      
        <item name="dropDownListViewStyle">@style/Eric_DropDownListView</item>  
        <item name="popupMenuStyle">@style/Eric_PopupMenu</item><!-- defines the background color of submenu -->
        <item name="actionMenuTextAppearance">@style/Eric_ActionBar_Text_Style</item>
        <item name="homeAsUpIndicator">@drawable/upbar_back</item>
        
        <item name="android:actionBarStyle">@style/Eric_Solid_ActionBar</item>
        <item name="android:spinnerItemStyle">@style/Eric_SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/Eric_Spinner_DropDownItem</item>
        <item name="android:actionDropDownStyle">@style/Eric_DropDownNav</item>
        <item name="android:dropDownListViewStyle">@style/Eric_DropDownListView</item>          
    	<item name="android:popupMenuStyle">@style/Eric_PopupMenu</item>
    	<item name="android:homeAsUpIndicator">@drawable/upbar_back</item>
    	
    	<item name="textColorPrimary">@android:color/white</item><!-- defines the text color of submenu -->
    	<item name="android:textColorPrimary">@android:color/white</item><!-- defines the text color of submenu -->
    </style>

    <style name="Eric_Solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid"><!-- this custom style has to extend the sherlock style, or it won't work properly -->
<!--         <item name="titleTextStyle">@style/TextAppearance.Sherlock.Widget.ActionBar.Title</item> -->
<!--         <item name="subtitleTextStyle">@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle</item> -->
        
        <item name="titleTextStyle">@style/Eric_ActionBar_Text_Style</item>
        <item name="subtitleTextStyle">@style/Eric_ActionBar_Text_Style</item>
        <item name="android:titleTextStyle">@style/Eric_ActionBar_Text_Style</item>
        <item name="android:subtitleTextStyle">@style/Eric_ActionBar_Text_Style</item>
        <item name="divider">?attr/dividerVertical</item>
<!--         <item name="progressBarStyle">@style/Widget.Sherlock.Light.ProgressBar.Horizontal</item> -->
<!--         <item name="indeterminateProgressStyle">@style/Widget.Sherlock.Light.ProgressBar</item> -->
        <item name="background">@color/spinner_bg</item>
        <item name="backgroundStacked">@color/spinner_bg</item>
        <item name="backgroundSplit">@color/spinner_bg</item>
        <item name="android:background">@color/spinner_bg</item>
        <item name="android:backgroundStacked">@color/spinner_bg</item>
        <item name="android:backgroundSplit">@color/spinner_bg</item>

    </style>

    <style name="Eric_ActionBar_Text_Style" parent="Widget">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/common_bg_gray</item>
    </style>

    <style name="Eric_SpinnerItem" parent="@style/Widget.Sherlock.TextView.SpinnerItem">
        <item name="background">@color/spinner_bg</item>
        <item name="android:background">@color/spinner_bg</item>
        <item name="android:padding">10dip</item>
        <item name="android:textAppearance">@style/Eric_ActionBar_Text_Style</item>
    </style>

    <style name="Eric_DropDownNav" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="background">@color/spinner_bg</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="Eric_DropDownListView" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:textAppearance">@style/Eric_ActionBar_Text_Style</item>
    </style>
    
    
    <style name="Eric_Spinner_DropDownItem"  parent="@style/Widget.Sherlock.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/Eric_ActionBar_Text_Style</item>
    </style>
    
    <style name="Eric_PopupMenu" parent="@style/Widget.Sherlock.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/spinner_bg</item>
    </style>

</resources>